<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout">
	<VBox >
		<List
			items="{/SfUser}"
			headerText="Users"
			growing="true"
			growingThreshold="20"
			growingScrollToLoad="false">
			<StandardListItem
				title="{firstName} {lastName}"
				description="{userName}"/>
		</List>
	</VBox>
</core:FragmentDefinition>